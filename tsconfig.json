{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
